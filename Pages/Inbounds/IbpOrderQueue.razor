        <MudTh>@L["DNDate"]</MudTh>
        <MudTh>@L["DNNo"]</MudTh>
        <MudTh>@L["ItemCode"]</MudTh>
        <MudTh>@L["ItemName"]</MudTh>
        <MudTh>@L["Qty"]</MudTh>
        <MudTh>@L["Unit"]</MudTh>
        <MudTh>@L["Weight"]</MudTh>
        <MudTh>@L["LotNo"]</MudTh>
        <MudTh>@L["BatchNo"]</MudTh>
    </HeaderContent>
    <GroupHeaderTemplate>
        <MudTh Class="mud-table-cell-custom-group" colspan="5">@($"{context.GroupName}: {context.Key}")</MudTh>
    </GroupHeaderTemplate>
    <RowTemplate>
        <MudTd DataLabel="GRDatetime">@context.Created</MudTd>
        <MudTd DataLabel="DNDate">@Convert.ToDateTime(context.Docdate).ToShortDateString()</MudTd>
        <MudTd DataLabel="DNNo">@context.Pono</MudTd>
        <MudTd DataLabel="ItemCode">@context.Itemcode</MudTd>
        <MudTd DataLabel="ItemName">@context.Itemname</MudTd>
        <MudTd Style="text-align: right" DataLabel="Qty">@context.Quantity</MudTd>
        <MudTd DataLabel="Unit">@context.Unit</MudTd>
        <MudTd DataLabel="Weight">@context.Weight</MudTd>
        <MudTd DataLabel="LotNo">@context.Docno</MudTd>
        <MudTd DataLabel="BatchNo">@context.Docnote</MudTd>

    </RowTemplate>
    <GroupFooterTemplate>
        <MudTh Class="mud-table-cell-custom-group mud-table-cell-custom-group-footer" colspan="5">Total Quantity: @context.Items.Sum((e) => e.Quantity)</MudTh>
    </GroupFooterTemplate>

</MudTable>

