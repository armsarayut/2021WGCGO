    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <MudText Typo="Typo.h6" Color="Color.Primary"> @pageheader </MudText>
    <MudTable Items="@Elements" FixedHeader="@fixed_header" FixedFooter="@fixed_footer" Height="@(fixed_header || fixed_footer ?"600px":"")" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" Filter="new Func<Vrpt_shelf_listInfo,bool>(FilterFunc)" @bind-SelectedItem="selectedItem" SortLabel="Sort By">
        <ToolBarContent>
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Custom.FileFormats.FileExcel" Style="background-color: mediumseagreen; color: white; width: 80px; height: 30px;">
                Excel
            </MudButton>
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Custom.FileFormats.FilePdf" Style="background-color: orangered; color: white; width: 80px; height: 30px;">
                PDF
            </MudButton>
            <MudToolBarSpacer />
            <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Location</MudTh>
            <MudTh>SRM</MudTh>
            <MudTh>BANK</MudTh>
            <MudTh>BAY</MudTh>
            <MudTh>LEVEL</MudTh>
            <MudTh>MasterPallet</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>LastUpdate</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Location">@context.Shelfcode</MudTd>
            <MudTd DataLabel="SRM">@context.Srm_no</MudTd>
            <MudTd DataLabel="BANK">@context.Shelfbank</MudTd>
            <MudTd DataLabel="BAY">@context.Shelfbay</MudTd>
            <MudTd DataLabel="LEVEL">@context.Shelflevel</MudTd>
            <MudTd DataLabel="MasterPallet">@context.Lpncode</MudTd>
            <MudTd DataLabel="Status">@context.St_desc</MudTd>
            <MudTd DataLabel="LastUpdate">@context.Modified</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{10,20,50,100}" />
        </PagerContent>
    </MudTable>
}

