    private bool FilterFunc(Set_Operate element)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.Mc_Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }

