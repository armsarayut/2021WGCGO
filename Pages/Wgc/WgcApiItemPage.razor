            <MudTd DataLabel=@L["ITEM_UM"]>@context.ITEM_UM</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{10,20,50,100}" />

        </PagerContent>
    </MudTable>
